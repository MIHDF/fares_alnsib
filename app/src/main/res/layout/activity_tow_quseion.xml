<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shepcolor"
    android:orientation="vertical"
    android:id="@+id/Layout_Sacend"
    tools:context=".game.Ui.ActivityTowQuseion"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Layout_Tool_bar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/number_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/ds"
                android:text="@string/coin"
                android:textColor="@color/yallo"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_coins"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar2" />

            <ImageView
                android:id="@+id/add_coins"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/coin"
                app:layout_constraintBottom_toBottomOf="@id/Layout_Tool_bar2"
                app:layout_constraintStart_toStartOf="@id/Layout_Tool_bar2"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar2" />



            <TextView

                android:id="@+id/back_and_level_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ds"
                android:text="@string/level_number"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/textViewQuestion2"
                    android:layout_width="350dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:background="@drawable/quison"
                    android:fontFamily="@font/ds"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="@string/q"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />

                <TextView
                    android:id="@+id/help_2"
                    android:layout_width="40dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tlmeh"
                    android:textSize="24sp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintStart_toStartOf="@+id/textViewQuestion2"
                    app:layout_constraintTop_toTopOf="@+id/textViewQuestion2"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>




            <TextView
                android:id="@+id/text_help_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ds"
                android:gravity="center"
                android:text="@string/info_q_2"
                android:textColor="@color/white"
                android:textSize="18sp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/set_text"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_q"
                    android:fontFamily="@font/ds"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />


                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/wrong"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        >

                        <TextView
                            android:id="@+id/Number_1"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"

                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="ل"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_2"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="ا"
                            android:textColor="@color/black"

                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_3"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="ي"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_4"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="م"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/Number_5"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"

                            android:text="ب"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_6"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"

                            android:text="ض"
                            android:textColor="@color/black"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_7"

                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="د"
                            android:textColor="@color/black"

                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/Number_8"
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:background="@drawable/prised"
                            android:fontFamily="@font/ds"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="س"

                            android:textColor="@color/black"
                            android:textSize="17sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >


            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="155dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/coin_payed"
                    android:fontFamily="@font/ds"
                    android:gravity="start|center"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:text="@string/tlmeh"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                />

                <TextView
                    android:id="@+id/OnClick223"
                    android:layout_width="155dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/conform"
                    android:fontFamily="@font/ds"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>