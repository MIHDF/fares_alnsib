<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shepcolor"
    android:orientation="vertical"

    tools:context=".game.Ui.ActivityThereQuseion">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/Toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Layout_Tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/score_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/ds"
                android:text="@string/coin"
                android:textColor="@color/yallo"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_coins"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar" />

            <ImageView
                android:id="@+id/add_coins"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/coin"
                app:layout_constraintBottom_toBottomOf="@id/Layout_Tool_bar"
                app:layout_constraintStart_toStartOf="@id/Layout_Tool_bar"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar" />


            <TextView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/back"
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="@id/Layout_Tool_bar"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ds"
                android:text="@string/level_nom"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/back"
                app:layout_constraintTop_toTopOf="@id/Layout_Tool_bar" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Layout_Therd"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"

            >

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="340dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:background="@drawable/quison"

                />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/tlmeh"
                android:textSize="24sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ds"
                android:gravity="center"
                android:text="@string/info_q_3"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >

                <TableRow

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <TextView
                        android:id="@+id/op1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/shep24"
                        android:gravity="center"
                        android:paddingBottom="10dp"

                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/op2"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/shep24"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                </TableRow>

                <TableRow

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <TextView
                        android:id="@+id/op3"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/shep24"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/op4"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/shep24"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/yes"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/coin_payed"
            android:gravity="center"
            android:text="@string/incramntel10"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/coin_incermal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonConfirmNext"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/coin_payed"
            android:gravity="center"
            android:text="تأكيد"
            android:textColor="@color/green"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>